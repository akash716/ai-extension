{
    "manifest_version": 3,
    "name": "SalesmanAI",
    "version": "1.0",
    "description": "Extracts text from a webpage and answers questions from it.",
    "permissions": ["scripting", "storage", "activeTab"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
          "16": "icon.png",
          "48": "icon.png",
          "128": "icon.png"
        }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  










  
